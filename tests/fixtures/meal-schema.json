{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "category", "moods", "ingredients", "searchTerms"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "category": {
      "type": "string",
      "enum": ["breakfast", "italian", "japanese", "chinese", "texmex", "seafood", "soup", "sandwich", "side"]
    },
    "moods": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["cozy", "fresh", "hearty", "quick", "breakfast", "seafood", "asian", "italian"]
      }
    },
    "ingredients": {
      "type": "object",
      "required": ["core", "pantry"],
      "properties": {
        "core": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pantry": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "searchTerms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "nutrition": {
      "type": "object",
      "properties": {
        "calories": {
          "type": "number",
          "minimum": 0
        },
        "protein": {
          "type": "number",
          "minimum": 0
        },
        "carbs": {
          "type": "number",
          "minimum": 0
        },
        "fat": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}